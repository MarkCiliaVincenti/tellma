@page "/identity/confirm-email"
@inject IViewLocalizer Localizer
@model ConfirmEmailModel
@{
    ViewData["Title"] = Localizer["ConfirmEmail"];
}

<div class="text-center pt-3 pb-3">
    <div class="alert-success p-2">
        <i class="fas fa-check"></i>&nbsp;
        <span>
            @Localizer["EmailConfirmationMessage"]
        </span>
    </div>
</div>

<a class="btn btn-primary w-100" asp-page="./Login">
    <i class="fas fa-sign-in-alt @(CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft ? "fa-flip-horizontal": "")"></i>&nbsp;&nbsp;@Localizer["SignIn"]
</a>
