@page "/identity/sign-in-recovery-code"
@inject IViewLocalizer Localizer
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = Localizer["RecoveryCodeVerification"];
}

<h4 class="b-auth-title">@ViewData["Title"]</h4>
<hr />
<p>
    @Localizer["RecoveryCodeVerificationMessage"]
</p>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.RecoveryCode"></label>
        <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100">
        <i class="fas fa-sign-in-alt @(CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft ? "fa-flip-horizontal": "")"></i>&nbsp;&nbsp;@Localizer["SignIn"]
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
