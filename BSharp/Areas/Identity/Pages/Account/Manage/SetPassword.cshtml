@page "/identity/manage/set-password"
@inject IViewLocalizer Localizer
@model SetPasswordModel
@{
    ViewData["Title"] = Localizer["SetPassword"];
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>@Localizer["SetPassword"]</h4>
<hr />
<partial name="_StatusMessage" for="StatusMessage" />
<p class="">
    @Localizer["SetPasswordMessage"]
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>&nbsp;&nbsp;@Localizer["SetPassword"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}