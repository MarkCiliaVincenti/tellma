@page "/identity/forgot-password"
@inject IHtmlLocalizer<Strings> Localizer
@model ForgotPasswordModel
@{
    ViewData["Title"] = Localizer["ForgotYourPassword"];
}

<h4  class="b-auth-title">@Localizer["ForgotYourPassword"]</h4>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email">@Localizer["EnterYourEmail"]</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100 mb-2"><i class="fas fa-key"></i>&nbsp;&nbsp;@Localizer["ResetMyPassword"]</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
